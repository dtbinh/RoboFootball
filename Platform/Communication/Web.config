<?xml version="1.0"?>
<configuration>
  <system.serviceModel>
    <bindings/>
    <client/>
    <services>
      <service name="Communication.CommunicationService"
               behaviorConfiguration="CommunicationServiceMEXBehavior">
        <endpoint name="LogManager"
                  address="/LogManager"
                  binding="basicHttpBinding"
                  contract="Communication.ServiceContracts.ICommandManager"/>
        <endpoint contract="IMetadataExchange"
                  binding="mexHttpBinding"
                  address="mex"/>
      </service>
    </services>
    <!-- A behavior definition for MEX -->
    <behaviors>
      <serviceBehaviors>
        <behavior name="CommunicationServiceMEXBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <!--<serviceDebug includeExceptionDetailInFaults="false"/>-->
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>
</configuration>
